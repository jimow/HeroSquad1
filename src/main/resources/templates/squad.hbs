{{#block "header"}}

    <!doctype html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport"
              content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <title>{{#block "title"}}Welcome to My Epicodus Blog{{/block}}</title>
        <link rel="stylesheet" href="/css/main.css">
    </head>
    <body>
{{/block}}
<div class="page">
{{#block "content"}}
<div class="content" >
    <div class="squad-card">
        <div class="card text-center" style="width: 38rem;">
            <div class="card-body">
                <h2 class="card-title">$squad.getName()</h2>
                <h6 class="card-text">$squad.getCause()</h6>
            </div>

            <ul class="list-group list-group-flush">
                #foreach($hero in $squad.getHeroes())
                <li class="list-group-item">$hero.getName()</li>
                #end
            </ul>

            <div class="card-body">
                <a href="/squads/$squad.getId()/heroes/new" class="card-link">Add New Hero</a>
                <a href="/squads" class="card-link">All Squads</a>
            </div>
            <div d-flex justify-content-between align-items-center>
                <span class="badge badge-primary badge-pill">Max: $squad.getMaxSize()</span>
                <span class="badge badge-success badge-pill">Size: $squad.getHeroes().size() </span>
            </div>
        </div>
    </div>
</div>
{{/block}}

{{#block "footer"}}

    </div>
    </body>
